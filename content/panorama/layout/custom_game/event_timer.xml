<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/animations.css"/>
        <include src="file://{resources}/styles/custom_game/event_timer.css"/>
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/custom_game/utils.js"/>
        <include src="file://{resources}/scripts/custom_game/event_timer.js"/>
    </scripts>

    <Panel hittest="false" class="EventTimer">
        <Panel class="EventTimerContainer" id="EventTimerTop">
            <Panel class="EventContent">
                <Panel class="EventTextAndHeader">
                    <Label class="EventHeader" text="Crystal Maiden"/>
                    <Label id="EventTimer" class="EventTimerText" text=""/>
                </Panel>
            </Panel>
            <Image id="BossEventImage" class="EventImage"/>
        </Panel>
        <Panel class="EventTimerContainer" id="HatchTimerTop">
            <Panel class="EventContent">
                <Panel class="EventTextAndHeader">
                    <Label class="EventHeader" text="Mega eggs"/>
                    <Label id="BigEggHatchTimer" class="EventTimerText" text=""/>
                </Panel>
            </Panel>
            <Image id="BigEggHatchEventImage" class="EventImage"/>
        </Panel>
    </Panel>
</root>