<root>
    <styles>
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="s2r://panorama/styles/dashboard_page_custom_game.vcss_c" />
        <include src="file://{resources}/styles/custom_game/tutorial.css"/>
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/custom_game/tutorial.js"/>
    </scripts>

    <Panel class="TutorialRoot">
        <Panel id="TutorialContainer" class="Hidden">
            <Label class="GameTitle" text="#addon_game_name"/>
            <Panel class="TutorialBlocks">
                <Panel class="TutorialBlock">
                    <Image class="TutorialImage" src="file://{images}/custom_game/kill_creeps_tutorial.png"  scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Label class="TutorialText" text="Kill creeps!"/>
                </Panel>
                <Panel class="TutorialBlock">
                    <Image class="TutorialImage" src="file://{images}/custom_game/find_seals_tutorial.png"  scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Label class="TutorialText" text="Collect Power Seals!"/>
                </Panel>
                <Panel class="TutorialBlock">
                    <Image class="TutorialImage" src="file://{images}/custom_game/access_hatchery_tutorial.png"  scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Label class="TutorialText" text="Access your Hatchery!"/>
                </Panel>
                <Panel class="TutorialBlock">
                    <Image class="TutorialImage" src="file://{images}/custom_game/greevil_bank_background.png"  scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Label class="TutorialText" text="Hatch custom greevils!"/>
                </Panel>
                <Panel class="TutorialBlock">
                    <Image class="TutorialImage" src="file://{images}/custom_game/feed_big_boy_tutorial.png"  scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Label class="TutorialText" text="Feed your Big Boy!"/>
                </Panel>
            </Panel>
            <Button id="TutorialButton" text="Got it!" class="CustomButton">
                <Label text="Got it!"/>
            </Button>
        </Panel>
    </Panel>
</root>